{{!< default}}

{{>content-header}}

<main class="container content" id="content">

  <article class="post {{post_class}}">

    {{#post}}

      <header class="post-header">
        <img src="{{feature_image}}" alt="{{title}}" class="post-image post-image--full">

        <div class="post-header-overlay">
          {{#if tags}}
            <span class="post__tags">
              {{tags separator=""}}
            </span>
          {{/if}}

          <h1 class="post__title">{{title}}</h1>

          <div class="post__meta">
            {{#primary_author}}
              <a href="{{url}}" class="post-author">
                <img class="author-profile-image" src="{{profile_image}}" alt="{{name}}">
                <p class="author-name">{{name}}</p>
              </a>
            {{/primary_author}}

            <div class="meta-separator-pst"></div>

            <time class="post__date" datetime="{{date format='DD MMMM YYYY'}}">
              {{date format="DD MMMM YYYY"}}
            </time>

            <div class="meta-separator-pst"></div>

            <p class="post__date">{{reading_time}}</p>
          </div>
        </div>
      </header>

      <section class="post__content">
        {{#if access}}
            {{content}}
          {{else}}
            <p>You don't have access to this post on <strong>{{@site.title}}</strong> at the moment, but if you upgrade your account you'll be able to see the whole thing, as well as all the other posts in the archive! Subscribing only takes a few seconds and will give you immediate access.</p>

            <aside style="text-align: center;">

            {{#if @member}}
                <h2>This post is for paying subscribers only</h2>
              {{else}}
                <h2>This post is for subscribers only</h2>
            {{/if}}
            <a class="button large primary" href="/signup/">Subscribe now</a>
            <p><small>Already have an account? <a href="/signin/">Sign in</a></small></p>
            </aside>
        {{/if}}

      </section>

      <footer class="post__footer">

      {{> author-info}}

      </footer>


    {{/post}}

  </article>
</main>
